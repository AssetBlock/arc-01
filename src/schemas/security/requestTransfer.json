{
  "$id": "https://www.github.com/AssetBlock/arc-01/src/schemas/security/requestTransfer.json",
  "type": "object",
  "additionalProperties": false,
  "required": ["tknSymbol", "type", "qty", "toAddr"],
  "properties": {
    "txType": { "type": "string", "maximum": 5 },
    "opType": { "type": "string", "maximum": 5 },
    "tknSymbol": { "type": "string", "minimum": 3, "maximum": 5 },
    "type": {
      "allOf": [{ "type": "string" }, { "maximum": 5 }],
      "oneOf": [
        { "const": "BASIC" },
        { "const": "FORCE" },
        { "const": "CHECK" }
      ]
    },
    "qty": { "type": "number", "minimum": 0 },
    "toAddr": { "type": "string", "minimum": 58, "maximum": 58 },
    "meta": { "type": "object" }
  }
}
