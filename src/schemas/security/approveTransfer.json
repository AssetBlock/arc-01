{
  "$id": "https://www.github.com/AssetBlock/arc-01/src/schemas/security/approveTransfer.json",
  "type": "object",
  "additionalProperties": false,
  "required": ["tfrStatus", "tfrTotal", "txnRef", "fromAddr", "tknSymbol"],
  "properties": {
    "txType": { "type": "string", "maximum": 5 },
    "opType": { "type": "string", "maximum": 5 },
    "tfrStatus": {
      "allOf": [{ "type": "string" }],
      "oneOf": [{ "const": "APPROVED" }]
    },
    "tfrTotal": { "type": "number", "minimum": 0 },
    "txnRef": { "type": "string", "minimum": 52, "maximum": 52 },
    "fromAddr": { "type": "string", "minimum": 58, "maximum": 58 },
    "tknSymbol": { "type": "string", "minimum": 3, "maximum": 5 },
    "meta": { "type": "object" }
  }
}
